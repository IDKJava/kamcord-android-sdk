<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ColorPrimary"
    android:elevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_item_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/default_video_thumb"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cardview_lightermargin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cardview_standardmargin"
                    android:layout_marginRight="@dimen/cardview_standardmargin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/kamcordDarkText"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/profile_item_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cardview_standardmargin"
                    android:layout_marginRight="@dimen/cardview_standardmargin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/byAuthorGame"
                    android:textColor="@color/kamcordLightText"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/moreVideoActionsImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/ic_more_vert_white_24dp"
                android:tint="@color/kamcordGray"
                android:tintMode="multiply" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_actionheight"
            android:layout_margin="@dimen/cardview_standardmargin">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/video_card_count_button_background">

                <Button
                    android:id="@+id/profile_video_likes_button"
                    style="@style/KamcordVideoCardCountButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/likes_icon_selector"
                    android:drawableStart="@drawable/likes_icon_selector"
                    android:text="@string/defaultNumber" />
            </FrameLayout>

            <!--- I'll be back!
            <Button
                android:id="@+id/video_comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:text="@string/defaultNumber"
                style="@style/KamcordVideoCardCountButton"
                android:drawableStart="@drawable/comments_gray"
                android:enabled="false" /> -->

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/video_views"
                style="@style/KamcordVideoCardCountButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:drawableLeft="@drawable/views_gray"
                android:drawableStart="@drawable/views_gray"
                android:enabled="false"
                android:text="@string/defaultNumber" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
