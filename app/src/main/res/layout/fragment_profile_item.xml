<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    card_view:cardBackgroundColor="@color/ColorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_item_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/default_video_thumb"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_lightermargin"
            android:layout_marginTop="@dimen/cardview_lightermargin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cardview_standardmargin"
                    android:layout_marginRight="@dimen/cardview_standardmargin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/kamcordDarkText"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/profile_item_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cardview_standardmargin"
                    android:layout_marginRight="@dimen/cardview_standardmargin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/byAuthorGame"
                    android:textColor="@color/kamcordLightText"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/moreVideoActionsImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/ic_more_vert_white_24dp"
                android:tint="@color/kamcordGray"
                android:tintMode="multiply" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/defaultDividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stream_info_layout"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/profile_video_likes_button"
                style="@style/KamcordStreamCardCountButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/likes_icon_selector"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/defaultNumber" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/video_views"
                style="@style/KamcordStreamCardCountButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/eye_gray_24dp"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/defaultNumber" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
