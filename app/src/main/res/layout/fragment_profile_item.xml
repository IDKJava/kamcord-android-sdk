<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ColorPrimary"
    android:elevation="2dp"
    android:foreground="?android:attr/selectableItemBackground" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_item_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/default_thumbnails"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/profile_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardview_standardmargin"
            android:layout_marginRight="@dimen/cardview_standardmargin"
            android:layout_marginTop="@dimen/cardview_lightermargin"
            android:text="Video Title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/profile_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardview_standardmargin"
            android:layout_marginRight="@dimen/cardview_standardmargin"
            android:text="Video Author"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_lightermargin"
            android:layout_marginLeft="@dimen/cardview_standardmargin"
            android:layout_marginRight="@dimen/cardview_standardmargin"
            android:layout_marginTop="@dimen/cardview_lightermargin">

            <Button
                android:id="@+id/profile_video_likes_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/cardview_actionsize"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/videoLikes"
                android:textColor="@color/kamcordGreen"
                android:background="@drawable/button_selector" />

            <TextView
                android:id="@+id/video_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/cardview_lightermargin"
                android:layout_toStartOf="@+id/video_views"
                android:text="Comments"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/video_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Views"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
