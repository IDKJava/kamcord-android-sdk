<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/gameThumbnailImageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/kamcordDarkText"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/gameFollowerCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/kamcordLightText"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/gameActionImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:adjustViewBounds="false"
            android:background="@drawable/hollow_circle_background"
            android:padding="10dp"
            android:scaleType="fitCenter" />

    </LinearLayout>
</android.support.v7.widget.CardView>
