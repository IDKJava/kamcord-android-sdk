<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btnstyle"
        android:text="Skip"
        android:textAllCaps="false"
        android:textColor="@color/ButtonTextColor" />

    <Button
        android:id="@+id/shareview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/skip_btn"
        android:layout_below="@+id/skip_btn"
        android:background="@drawable/login_btnstyle"
        android:text="Share"
        android:textAllCaps="false"
        android:textColor="@color/ButtonTextColor" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/create_profile_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/login_btn"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/login_btnstyle"
            android:text="Create a Profile"
            android:textAllCaps="false"
            android:textColor="@color/ButtonTextColor" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:background="@drawable/login_btnstyle"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/ButtonTextColor" />

    </TableRow>

</RelativeLayout>