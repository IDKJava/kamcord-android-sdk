<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="@dimen/suggest_item_width"
    android:layout_height="@dimen/suggest_item_height"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:elevation="10dp"
    android:background="@color/ColorPrimary"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/cardRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ColorPrimary"
        android:layout_gravity="center_horizontal" >

        <com.kamcord.app.utils.RoundedImageView
            android:id="@+id/item_image"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/suggest_item_margin"
            android:layout_marginLeft="@dimen/suggest_item_margin"
            android:layout_marginRight="@dimen/suggest_item_margin"
            android:src="@drawable/pa_rabbit"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_packagename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:singleLine="false"
            android:padding="10dp"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gridTextColor"
            android:layout_below="@+id/item_image"
            android:layout_alignStart="@+id/item_image" />

        <TextView
            android:id="@+id/installGameTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/installThisGame"
            android:background="@color/transparentWhite"
            android:gravity="center"
            android:padding="8dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
