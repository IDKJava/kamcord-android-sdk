<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false" >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/webViewRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/tabsHeight"
        android:clipToPadding="false"
        android:clipChildren="false" >
        <com.kamcord.app.view.ObservableWebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/signInPromptContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:maxWidth="250dp"
            android:text="@string/signInProfilePrompt" />

        <Button
            android:id="@+id/signInPromptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btnstyle"
            android:text="@string/signIn"
            android:textAllCaps="false"
            android:textColor="@color/ButtonTextColor" />
    </LinearLayout>

</RelativeLayout>
