<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance_KamcordHighlighted">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/kamcordGreen</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/ColorPrimaryDark</item>
    </style>

    <style name="KamcordButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="KamcordButton.HollowWhite" parent="KamcordButton">
        <item name="android:background">@drawable/hollow_white_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="KamcordButton.HollowGray" parent="KamcordButton">
        <item name="android:background">@drawable/hollow_gray_button_background</item>
        <item name="android:textColor">@color/kamcordGray</item>
    </style>

    <style name="KamcordButton.SolidGray" parent="KamcordButton">
        <item name="android:background">@drawable/solid_gray_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="KamcordButton.HollowGreen" parent="KamcordButton">
        <item name="android:background">@drawable/hollow_green_button_background</item>
        <item name="android:textColor">@color/kamcordGreen</item>
    </style>

    <style name="KamcordButton.SolidGreen" parent="KamcordButton">
        <item name="android:background">@drawable/solid_green_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="KamcordStreamCardCountButton">
        <item name="android:background">@drawable/stream_card_count_button_background</item>
        <item name="android:textColor">@color/video_card_count_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="KamcordLiveStreamIndicator">
        <item name="android:background">@drawable/live_stream_indicator_background</item>
        <item name="android:textColor">@color/live_stream_indicator</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="KamcordVideoCardCountButton">
        <item name="android:background">@drawable/video_card_count_button_background</item>
        <item name="android:textColor">@color/video_card_count_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="ExternalShareButton">
        <item name="android:background">@drawable/external_share_button_background</item>
        <item name="android:textColor">@color/ColorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

</resources>
