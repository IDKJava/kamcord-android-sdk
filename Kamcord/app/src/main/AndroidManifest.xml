<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kamcord.app.kamcord" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.get_top_activity_info" />

    <application
        android:name=".activity.application.KamcordApplication"
        android:allowBackup="true"
        android:icon="@drawable/kamcord_appicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.activity.RecordActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.service.RecordingService$ServiceActivity"
            android:label="Kamcord" >
        </activity>

        <service android:name=".activity.service.RecordingService" >
        </service>

        <activity
            android:name=".activity.activity.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >

        </activity>
    </application>

</manifest>
